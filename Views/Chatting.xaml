<Window x:Class="Walkydoggy.Views.Chatting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Walkydoggy.Views"
        mc:Ignorable="d"
        Title="Chatting" Height="450" Width="300" Closing="Window_Closing" WindowStartupLocation="CenterScreen" >
    <Grid Grid.Column="4" Margin="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <ListView Grid.Row="1" 
                          Name="lvChatting" 
                          Background="White"
                          ItemsSource="{Binding Messages}">
                </ListView>
                <Grid Grid.Row="2" Margin="0, 0, 0, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Row="2" Name="tbContent"  KeyDown="tbContent_KeyDown"/>
                    <Button Grid.Column="1" Click="Button_Click">
                        <TextBlock>전송</TextBlock>
                    </Button>
                </Grid>
            </Grid>
</Window>
